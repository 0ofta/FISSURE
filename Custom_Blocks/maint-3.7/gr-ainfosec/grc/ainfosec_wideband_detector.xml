<?xml version="1.0"?>
<block>
  <name>wideband_detector</name>
  <key>ainfosec_wideband_detector</key>
  <category>[ainfosec]</category>
  <import>import ainfosec</import>
  <make>ainfosec.wideband_detector($address,$rx_freq,$fft_size,$sample_rate)</make>
  <callback>set_address($address)</callback>
  <callback>set_rx_freq($rx_freq)</callback>
  <callback>set_fft_size($fft_size)</callback>
  <callback>set_sample_rate($sample_rate)</callback>
  <param>
    <name>Address</name>
    <key>address</key>
    <type>string</type>
  </param>
  <param>
    <name>RX Frequency</name>
    <key>rx_freq</key>
    <type>float</type>
  </param>  
  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>int</type>
  </param> 
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>float</type>
  </param>   
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>
</block>
